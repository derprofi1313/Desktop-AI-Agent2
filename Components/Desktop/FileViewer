import React, { useState } from 'react';
import { Dialog, DialogContent, DialogHeader, DialogTitle, DialogFooter } from '@/components/ui/dialog';
import { Button } from '@/components/ui/button';
import { Textarea } from '@/components/ui/textarea';
import { Save, X } from 'lucide-react';

export default function FileViewer({ file, onClose, onSave }) {
  const [content, setContent] = useState(file.content);

  const handleSave = () => {
    onSave(file, content);
  };

  return (
    <Dialog open={true} onOpenChange={onClose}>
      <DialogContent className="bg-gray-900 border-gray-700 text-white sm:max-w-[600px]">
        <DialogHeader>
          <DialogTitle>Datei: {file.name}</DialogTitle>
        </DialogHeader>
        <div className="py-4">
          <Textarea
            value={content}
            onChange={(e) => setContent(e.target.value)}
            className="h-64 bg-gray-800 border-gray-600 text-white"
          />
        </div>
        <DialogFooter>
          <Button variant="outline" onClick={onClose} className="border-gray-600 hover:bg-gray-700">
            <X className="mr-2 h-4 w-4" /> Abbrechen
          </Button>
          <Button onClick={handleSave} className="bg-cyan-500 hover:bg-cyan-600">
             <Save className="mr-2 h-4 w-4" /> Speichern
          </Button>
        </DialogFooter>
      </DialogContent>
    </Dialog>
  );
}
